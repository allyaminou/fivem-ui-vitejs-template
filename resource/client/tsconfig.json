{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["@types/node, @citizenfx/client"],
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@types": ["../../types/index.d.ts"]
    }
  },
  "include": ["./**/*", "../../types/**/*", "../utils/**/*"]
}
